{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://weme-ui.github.io/schema/repository.schema.json",
  "title": "Weme UI Repository JSON Schema Definitions",
  "description": "This is the repository configuration for the registry.",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema URL",
      "description": "The schema URL.",
      "type": "string",
      "format": "uri",
      "default": "https://weme-ui.github.io/schema/repository.schema.json"
    },
    "name": {
      "title": "Repository name",
      "description": "The name of the repository.",
      "type": "string",
      "format": "lowercase",
      "pattern": "^[^A-Z]*$",
      "examples": ["weme-ui"]
    },
    "owner": {
      "title": "Repository owner",
      "description": "The owner of the repository.",
      "type": "string",
      "format": "lowercase",
      "pattern": "^[^A-Z]*$",
      "examples": ["weme-ui"]
    },
    "version": {
      "title": "Repository version",
      "description": "The version of the repository.",
      "type": "string",
      "format": "semver",
      "examples": ["1.0.0"]
    },
    "registries": {
      "title": "Registries",
      "description": "The registries in the repository.",
      "type": "array",
      "items": {
        "title": "Registry",
        "description": "The registry in the repository.",
        "type": "object",
        "properties": {
          "name": {
            "title": "Registry name",
            "description": "The name of the registry. It should be `<owner>/<repo>` format.",
            "type": "string",
            "format": "lowercase",
            "pattern": "^[^A-Z]*\\/[^A-Z]*$",
            "examples": ["weme-ui/std"]
          },
          "description": {
            "title": "Registry description",
            "description": "The description of the registry.",
            "type": "string"
          },
          "prefix": {
            "title": "Registry prefix",
            "description": "Default prefix for added components of the registry.",
            "type": "string",
            "examples": ["ui"]
          },
          "statistics": {
            "title": "Registry statistics",
            "description": "The statistics of the registry.",
            "type": "object",
            "properties": {
              "components": {
                "title": "Components",
                "description": "The number of components in the registry.",
                "type": "integer"
              },
              "layouts": {
                "title": "Layouts",
                "description": "The number of layouts in the registry.",
                "type": "integer"
              },
              "themes": {
                "title": "Themes",
                "description": "The number of themes in the registry.",
                "type": "integer"
              },
              "blocks": {
                "title": "Blocks",
                "description": "The number of blocks in the registry.",
                "type": "integer"
              },
              "pages": {
                "title": "Pages",
                "description": "The number of pages in the registry.",
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "updated": {
      "title": "Repository updated",
      "description": "The last updated time of the repository.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "name",
    "owner",
    "version",
    "registries"
  ],
  "uniqueItems": true,
  "additionalProperties": false
}
