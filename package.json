{
  "name": "@weme-ui/schema",
  "type": "module",
  "version": "0.4.0",
  "packageManager": "pnpm@10.20.0",
  "author": "Allen Luo <luoyi@mouji.net>",
  "license": "MIT",
  "homepage": "https://weme-ui.github.io/schema",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weme-ui/schema.git"
  },
  "bugs": {
    "url": "https://github.com/weme-ui/schema/issues"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./project.json": "./project.json",
    "./registry.json": "./registry.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "project.json",
    "registry.json"
  ],
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.13.0"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "typecheck": "tsgo --noEmit",
    "test": "vitest",
    "prepublishOnly": "pnpm build",
    "release": "pnpm build && bumpp",
    "taze": "taze major -I -r"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "mkdirp": "^3.0.1",
    "pathe": "^2.0.3",
    "scule": "^1.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.1.0",
    "@types/node": "^24.9.2",
    "@typescript/native-preview": "7.0.0-dev.20250816.1",
    "bumpp": "^10.3.1",
    "eslint": "^9.38.0",
    "lint-staged": "^16.2.6",
    "pkg-types": "^2.3.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.8.1",
    "tsdown": "^0.15.11",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts}": "eslint --fix"
  }
}
