{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://weme-ui.github.io/schema/project.json",
  "title": "Weme UI Project JSON Schema Definitions",
  "description": "The Weme UI CLI will load `weme.config.json` before running any command.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The schema URL.",
      "format": "uri",
      "default": "https://weme-ui.github.io/schema/project.json"
    },
    "repos": {
      "type": "array",
      "description": "The repos to fetch the components from.",
      "items": {
        "type": "object",
        "properties": {
          "repo": {
            "type": "string",
            "description": "The repository name."
          },
          "registry": {
            "type": "string",
            "description": "The registry name."
          },
          "directory": {
            "type": "string",
            "description": "The directory of the registry."
          },
          "default": {
            "type": "boolean",
            "description": "Whether to use this registry as the default one.",
            "default": false
          },
          "prefix": {
            "type": "string",
            "description": "The prefix for the registry item's files.",
            "default": "ui"
          },
          "license": {
            "type": "string",
            "description": "The license for the private registry."
          }
        },
        "required": ["repo", "registry"]
      }
    },

    "paths": {
      "type": "object",
      "description": "The paths for the project.",
      "properties": {
        "components": {
          "type": "string",
          "description": "The path for the components.",
          "default": "~/components"
        },
        "composables": {
          "type": "string",
          "description": "The path for the composables.",
          "default": "~/composables"
        },
        "layouts": {
          "type": "string",
          "description": "The path for the layouts.",
          "default": "~/layouts"
        },
        "pages": {
          "type": "string",
          "description": "The path for the pages.",
          "default": "~/pages"
        },
        "plugins": {
          "type": "string",
          "description": "The path for the plugins.",
          "default": "~/plugins"
        },
        "themes": {
          "type": "string",
          "description": "The path for the themes.",
          "default": "~/themes"
        },
        "types": {
          "type": "string",
          "description": "The path for the types.",
          "default": "~/types"
        },
        "utils": {
          "type": "string",
          "description": "The path for the utils.",
          "default": "~/utils"
        }
      }
    },

    "unocss": {
      "type": "object",
      "description": "The UnoCSS Preset options.",
      "properties": {
        "variablePrefix": {
          "type": "string",
          "description": "The prefix for the CSS variables.",
          "default": "ui"
        },
        "accentColors": {
          "type": "object",
          "description": "The custom accent colors for the project.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "neutralColors": {
          "type": "object",
          "description": "The custom neutral colors for the project.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "cssVars": {
          "type": "object",
          "description": "The custom CSS variables for the project.",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["repos", "paths"]
}
